
@model IList<MisOfertasAppCore.data.Interface.IOferta>

@{
    ViewBag.Title = "MisProductos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700&subset=latin-ext,vietnamese" rel="stylesheet">
    <title>Mis Ofertas </title>
    <style>
        img {
            max-height: 240px;
            max-width:240px;
            height: auto;
            width: auto;
        }

    </style>
</head>

<body>
    <div class="container">
        <h4><b> Mis Productos en Oferta</b></h4>
        <div class="row">

            <!-- BEGIN PRODUCTS -->
            @if (@Model == null)
            {
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <h2>NO EXISTEN OFERTAS</h2>

                    </div>
                </div>

            }
            else
            {
                foreach (var oferta in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <span class="thumbnail">
                            @*<img src="https://home.ripley.cl/store/Attachment/WOP/D136/2000357193538/2000357193538_2.jpg" alt="...">*@

                            @if (oferta.Imagen == null)
    {
                        <img src="@Url.Content("~/Content/img/NO_DISPONIBLE.jpg")" alt="...">
}
else
{

                        <img src="@Url.Action("ViewImage", "Home", new { id = oferta.Imagen.ID_IMAGEN })"  width="240" height="240" alt="...">
}

                            <h4>@oferta.Producto.NOMBRE_PRODUCTO</h4>
                            <div class="ratings">
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star-empty"></span>
                            </div>
                            <p>TIENDA : @oferta.Tienda.NOMBRE </p>
                            <p>STOCK : @oferta.STOCK </p>
                            <p>DESCUENTO : @oferta.PCT_DESCUENTO % </p>
                            <p style="color:forestgreen;font-weight:bold;">PRECIO NORMAL : @oferta.PRECIO.ToString("C") </p>
                            <hr class="line">
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <p class="price" style="color:darkred;">@oferta.PRECIO_OFERTA.ToString("C")</p>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                    <a href="@Url.Action("OfertaProductoDetalle", "Home", new { id_producto = oferta.Producto.ID_PRODUCTO })">	<button class="btn btn-info right"> Ver m&aacute;s</button></a>

                                </div>

                            </div>
                        </span>
                    </div>
                }
            }
            <!-- END PRODUCTS -->
        </div>
    </div>
</body>
</html>